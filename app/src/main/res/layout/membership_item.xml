<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:gravity="center"
        android:background="@drawable/underlinebox">
        <TextView
            android:id="@+id/tv_mb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myMuk"
            android:layout_gravity="center"
            android:fontFamily="@font/scdream3"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="멤버십이름"/>
        <Button
            android:id="@+id/btn_membership"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_right_blue_24"/>
    </LinearLayout>

</LinearLayout>